<h2>Welcome {{userType}} </h2>

Name: {{doctor.name}}
Phone: {{doctor.phone}}

<h3>Doctor Roaster</h3>
{{#each patients}}

{{/each}}
<form method="post" action="/home/clinic/roaster">
    <select name="doctor">
        {{#each doctors}}
            <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <div class="form-group">
        <label for="areaFormControlTextarea1">Consultation Hours</label>
        <select name="open">
            {{#each hours}}
                <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
        <select name="close">
            {{#each hours}}
                <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="areaFormControlTextarea1">Consultation Days</label>

        {{#each days}}
            <input type="checkbox" name="days[]" value="{{this.id}}">{{this.name}}</input>
        {{/each}}
    </div>
    <input type="hidden" name="clinic" value="{{clinic.id}}">
    Duration: <input type="text" name="duration" value="">

    <button type="submit">Set Roaster</button>
</form>